// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Certificate {
  id        String   @id @default(uuid())
  fullName  String
  email     String   @unique
  date      DateTime
  createdAt DateTime @default(now())
}
